{
  "general": {
    "defaultApprovalMode": "auto_edit"
  },
  "tools": {
    "sandbox": "docker"
  },
  "telemetry": {
    "enabled": true,
    "target": "local",
    "outfile": ".gemini/telemetry.json"
  },
  "hooks": {
    "BeforeTool": [
      {
        "type": "command",
        "command": ".gemini/hooks/block-secrets.sh"
      }
    ],
    "AfterTool": [
      {
        "type": "command",
        "command": ".gemini/hooks/audit-logger.sh"
      }
    ]
  },
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@pepk/mcp-memory-sqlite"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "github-mcp"
      ]
    },
    "vercel": {
      "command": "npx",
      "args": [
        "vercel-mcp"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "puppeteer"
      ]
    },
    "obsidian": {
      "command": "npx",
      "args": [
        "obsidian-mcp"
      ]
    }
  }
}
