{
  "_comment": "Required env vars: HUGGINGFACE_TOKEN (for HuggingFace Hub API access). arXiv and Sequential Thinking require no auth.",
  "mcpServers": {
    "huggingface": {
      "command": "npx",
      "args": ["-y", "@huggingface/mcp-server"],
      "env": {
        "HF_TOKEN": "${HUGGINGFACE_TOKEN}"
      }
    },
    "arxiv": {
      "command": "npx",
      "args": ["-y", "arxiv-mcp-server"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}
